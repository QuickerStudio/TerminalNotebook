{
  "name": "terminalnotebook",
  "displayName": "TerminalNotebook",
  "description": "VS Code 扩展，React 侧边栏窗口，支持 TerminalNotebook 标签管理，模块化小组件，ts/tsx/css 文件结构。",
  "version": "0.0.1",
  "icon": "icons-terminal.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuickerStudio/TerminalNotebook.git"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalnotebook",
          "title": "TerminalNotebook",
          "icon": "icons-terminal.png"
        }
      ]
    },
    "views": {
      "terminalnotebook": [
        
        {
          "id": "terminalnotebook.view",
          "name": "Terminal Notebook"
        }
      ]
    },
    "commands": [
      {
        "command": "terminalnotebook.renameTab",
        "title": "重命名标签",
        "icon": "$(edit)"
      },
      {
        "command": "terminalnotebook.deleteTab",
        "title": "删除标签",
        "icon": "$(close)"
      },
      {
        "command": "terminalnotebook.addTag",
        "title": "添加标签",
        "icon": "$(plus)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "terminalnotebook.renameTab",
          "when": "view == terminalnotebook.view && viewItem =~ /editableTab/",
          "group": "inline@1"
        },
        {
          "command": "terminalnotebook.deleteTab",
          "when": "view == terminalnotebook.view && viewItem =~ /deletableTab/",
          "group": "inline@2"
        }
      ],
      "view/title": [
        {
          "command": "terminalnotebook.addTag",
          "when": "view == terminalnotebook.view",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "style-loader": "^3.3.4",
    "css-loader": "^6.8.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
